<?xml version="1.0"?>
<robot name="micro4.0">

  <!-- 1. Base Structure -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.033" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="-0.0038 0 -0.0066" rpy="0 0 0" />
      <mass value="0.5" />
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
	    <mesh filename="package://yahboomcar_description/meshes/base_link.STL" scale="1 1 1"/>
      </geometry>
      <material name="white"><color rgba="1 1 1 1" /></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry><box size="0.20 0.14 0.04"/></geometry>
    </collision>
  </link>

  <!-- 2. Wheels -->
  
  <!-- Front Left Wheel -->
  <link name="zq_Link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry><mesh filename="package://yahboomcar_description/meshes/zq_Link.STL" scale="1 1 1"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.03" radius="0.0325"/></geometry>
    </collision>
  </link>
  <joint name="zq_Joint" type="continuous">
    <origin xyz="0.0455 0.0675 -0.02125" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="zq_Link" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Front Right Wheel -->
  <link name="yq_Link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry><mesh filename="package://yahboomcar_description/meshes/yq_Link.STL" scale="1 1 1"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.03" radius="0.0325"/></geometry>
    </collision>
  </link>
  <joint name="yq_Joint" type="continuous">
    <origin xyz="0.0455 -0.0675 -0.02125" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="yq_Link" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Rear Left Wheel -->
  <link name="zh_Link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry><mesh filename="package://yahboomcar_description/meshes/zh_Link.STL" scale="1 1 1"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.03" radius="0.0325"/></geometry>
    </collision>
  </link>
  <joint name="zh_Joint" type="continuous">
    <origin xyz="-0.0495 0.0675 -0.02125" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="zh_Link" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Rear Right Wheel -->
  <link name="yh_Link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry><mesh filename="package://yahboomcar_description/meshes/yh_Link.STL" scale="1 1 1"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry><cylinder length="0.03" radius="0.0325"/></geometry>
    </collision>
  </link>
  <joint name="yh_Joint" type="continuous">
    <origin xyz="-0.0495 -0.0675 -0.02125" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="yh_Link" />
    <axis xyz="0 1 0" />
  </joint>


  <!-- 3. Sensors (IMU & Lidar) -->

  <link name="imu_Link">
    <inertial>
      <mass value="0.01" />
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001" />
    </inertial>
    <visual>
      <geometry><mesh filename="package://yahboomcar_description/meshes/imu_Link.STL" scale="1 1 1"/></geometry>
    </visual>
  </link>
  <joint name="imu_Joint" type="fixed">
    <origin xyz="-0.0029 -0.003 0.0317" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="imu_Link" />
  </joint>

  <link name="radar_Link">
    <inertial>
      <mass value="0.038" />
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00002" />
    </inertial>
    <visual>
      <geometry><mesh filename="package://yahboomcar_description/meshes/radar_Link.STL" scale="1 1 1"/></geometry>
    </visual>
    <collision>
      <geometry><cylinder length="0.02" radius="0.02"/></geometry>
    </collision>
  </link>
  <joint name="radar_Joint" type="fixed">
    <origin xyz="0 0 0.0789" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="radar_Link" />
  </joint>

  <gazebo reference="radar_Link">
    <sensor name="lidar" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1.000000</resolution>
            <min_angle>0.000000</min_angle>
            <max_angle>6.280000</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.120000</min>
          <max>3.5</max>
          <resolution>0.015000</resolution>
        </range>
      </ray>
      <plugin name="scan" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>radar_Link</frame_name>
      </plugin>
    </sensor>
  </gazebo>


  <!-- 4. Decorative Arm Links -->
  <link name="jq1_Link">
    <visual><geometry><mesh filename="package://yahboomcar_description/meshes/jq1_Link.STL" scale="1 1 1"/></geometry></visual>
    <inertial><mass value="0.01"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>
  <joint name="jq1_Joint" type="fixed">
    <origin xyz="0.064 0 0.014" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="jq1_Link" />
  </joint>
  <link name="jq2_Link">
    <visual><geometry><mesh filename="package://yahboomcar_description/meshes/jq2_Link.STL" scale="1 1 1"/></geometry></visual>
    <inertial><mass value="0.01"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>
  <joint name="jq2_Joint" type="fixed">
    <origin xyz="0.016 0 0.023" rpy="0 0 0" />
    <parent link="jq1_Link" />
    <child link="jq2_Link" />
  </joint>


  <!-- 5. Gazebo Plugins and Physics -->
  <gazebo>
    <plugin name='diff_drive' filename='libgazebo_ros_diff_drive.so'>
      <ros>
        <namespace>/</namespace>
        <remapping>cmd_vel:=cmd_vel</remapping>
        <remapping>odom:=odom</remapping>
      </ros>
      <update_rate>30</update_rate>
      <left_joint>zq_Joint</left_joint>
      <right_joint>yq_Joint</right_joint>
      <wheel_separation>0.135</wheel_separation>
      <wheel_diameter>0.065</wheel_diameter>
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
    </plugin>
  </gazebo>

  <!-- Friction and Surface Properties -->
  <gazebo reference="zq_Link">
    <mu1>1.0</mu1><mu2>1.0</mu2><kp>500000.0</kp><kd>10.0</kd>
  </gazebo>
  <gazebo reference="yq_Link">
    <mu1>1.0</mu1><mu2>1.0</mu2><kp>500000.0</kp><kd>10.0</kd>
  </gazebo>
  <gazebo reference="zh_Link">
    <mu1>0.5</mu1><mu2>0.5</mu2><kp>500000.0</kp><kd>10.0</kd>
  </gazebo>
  <gazebo reference="yh_Link">
    <mu1>0.5</mu1><mu2>0.5</mu2><kp>500000.0</kp><kd>10.0</kd>
  </gazebo>

</robot>
